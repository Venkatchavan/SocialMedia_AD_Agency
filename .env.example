# Environment (dev, staging, prod)
APP_ENV=dev

# LLM Configuration (U-5)
LLM_DRY_RUN=true              # Set to false to use real LLM API calls
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
USE_PREMIUM_MODELS=false
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
MISTRAL_API_KEY=

# Amazon Product Advertising API
AMAZON_PAAPI_ACCESS_KEY=your-access-key
AMAZON_PAAPI_SECRET_KEY=your-secret-key
AMAZON_PAAPI_PARTNER_TAG=your-tag-20
AMAZON_PAAPI_REGION=us-east-1

# Database (U-8) â€” SQLite for dev, PostgreSQL for prod
DATABASE_URL=sqlite:///./agency_dev.db
# DATABASE_URL=postgresql://agency:changeme@localhost:5432/affiliate_agency
POSTGRES_PASSWORD=changeme

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage (S3 / MinIO)
S3_BUCKET=affiliate-agency-assets
S3_REGION=us-east-1
S3_ENDPOINT_URL=          # Leave empty for AWS, set for MinIO

# Platform API Keys (loaded via secrets manager in prod)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
INSTAGRAM_ACCESS_TOKEN=
X_API_KEY=
X_API_SECRET=
X_BEARER_TOKEN=
PINTEREST_APP_ID=
PINTEREST_APP_SECRET=

# Secrets Manager Backend (aws | vault | env)
SECRETS_BACKEND=env

# Observability (U-11)
# SENTRY_DSN=

# Image Generation (U-22)
# IMAGE_PROVIDER=dalle3
# DALLE_API_KEY=
# STABILITY_API_KEY=

# Video Generation (U-23)
# VIDEO_PROVIDER=runway
# RUNWAY_API_KEY=
# VOICE_PROVIDER=elevenlabs
# ELEVENLABS_API_KEY=

# Billing (U-15)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Audit Logging
AUDIT_LOG_LEVEL=INFO

# Content Generation
MAX_REWRITE_ATTEMPTS=3
SIMILARITY_THRESHOLD=0.85
MIN_QUALITY_SCORE=60
RISK_SCORE_AUTO_BLOCK=70
RISK_SCORE_REVIEW_THRESHOLD=40

# Rate Limits
TIKTOK_POSTS_PER_DAY=10
INSTAGRAM_POSTS_PER_DAY=25
X_POSTS_PER_3H=50
PINTEREST_PINS_PER_DAY=50
